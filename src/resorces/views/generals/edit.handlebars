<div class="mt-4">
    <h2>Update Food</h2>

    <form class="mt-4"  method="POST" action="/generals/{{general._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Food's Name</label>
            <input type="text" class="form-control" value="{{general.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" class="form-control" value="{{general.price}}" id="price" name="price">
        </div>
        <div class="form-group">
            <label for="videoID">video ID</label>
            <input type="text" class="form-control" value="{{general.videoID}}" id="videoID" name="videoID">
        </div>
        <div class="form-group">
            <label for="expirationDate">Expiration Date</label>
            <input type="text" class="form-control" value="{{general.expirationDate}}" id="expirationDate" name="expirationDate">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>